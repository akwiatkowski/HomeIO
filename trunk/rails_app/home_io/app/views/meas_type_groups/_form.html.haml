= form_for(@meas_type_group) do |f|
  - if @meas_type_group.errors.any?
    #error_explanation
      %h2
        = pluralize(@meas_type_group.errors.count, "error")
        prohibited this meas_type_group from being saved:
      %ul
        - @meas_type_group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :unit
    %br/
    = f.text_field :unit
  .actions
    = f.submit