= form_for(@meas_type) do |f|
  - if @meas_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@meas_type.errors.count, "error")
        prohibited this meas_type from being saved:
      %ul
        - @meas_type.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :unit
    %br/
    = f.text_field :unit
  - if false
    .field
      = f.label :meas_type_group
      %br/
      = f.select("meas_type_group_id", MeasTypeGroup.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'None'})


  .actions
    = f.submit
