<h1>Listing memos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @memos.each do |memo| %>
  <tr>
    <td><%= memo.title %></td>
    <td><%= memo.text %></td>
    <td><%= memo.user_id %></td>
    <td><%= link_to 'Show', memo %></td>
    <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
    <td><%= link_to 'Destroy', memo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

