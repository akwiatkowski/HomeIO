%h1="Login"

= form_for( @user_session, :url => user_session_path ) do |f|
  = #f.error_messages
  - if @user_session.errors.any?
    %ul
      - @user_session.errors.full_messages.each do |msg|
        %li= msg
  = f.label :login
  = f.text_field :login
  %br
  = f.label :password
  = f.password_field :password
  %br
  = f.check_box :remember_me
  = f.label :remember_me
  %br
  = f.check_box :mobile
  = f.label :mobile
  %br
  = f.submit "Login"
